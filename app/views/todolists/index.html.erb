<!DOCTYPE html>
<html>
<head>
    <title>Todo List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .todo-container {
            max-width: 300px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .todo-container h2 {
            text-align: center;
        }

        .todo-list {
            list-style: none;
            padding: 0;
        }

        .todo-list li {
            margin-bottom: 10px;
            padding: 5px;
            background-color: #f0f0f0;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .todo-list li input[type="checkbox"] {
            margin-right: 5px;
        }

        .add-task input[type="text"] {
            width: 100%;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .add-task button {
            margin-top: 5px;
            padding: 5px 10px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="todo-container">
        <h2>Todo List</h2>
        <ul class="todo-list" id="taskList">
            <!-- Tasks will be added here dynamically -->
        </ul>

        <div class="add-task">
            <input type="text" id="newTask" placeholder="Add a new task">
            <button onclick="addTask()">Add Task</button>
        </div>
    </div>

    <script>
        function addTask() {
            var task = document.getElementById("newTask").value.trim();

            if (task !== "") {
                var li = document.createElement("li");
                li.innerHTML = `
                    <input type="checkbox" onclick="toggleCompletion(this)">
                    ${task}
                    <button onclick="removeTask(this)">Remove</button>
                `;
                document.getElementById("taskList").appendChild(li);

                document.getElementById("newTask").value = "";
            }
        }

        function removeTask(buttonElement) {
            var listItem = buttonElement.parentNode;
            listItem.parentNode.removeChild(listItem);
        }

        function toggleCompletion(checkboxElement) {
            var listItem = checkboxElement.parentNode;
            if (checkboxElement.checked) {
                listItem.style.textDecoration = "line-through";
            } else {
                listItem.style.textDecoration = "none";
            }
        }
    </script>
</body>
</html>
